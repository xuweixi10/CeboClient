/* pages/personal/index/index.wxss */
page{
  position: relative;
  height: 100%;
  width: 100%; 
}
.main{
  position: relative;
  height: 100%;
  width: 100%;
}
.top{
  position: relative;
  width: 100%;
  height: 300rpx;
  background-color: azure;
}
.top image{
  position: relative;
  float: left;
  left: 50rpx;
  top: 75rpx;
  height: 150rpx;
  width: 150rpx;
  border-radius: 150rpx;
}
.top .left{
  position: relative;
  float: left;
  left: 50rpx;
  top: 50rpx;
  height: 200rpx;
  width: 400rpx;
}
.left button{
  position: relative;
  height: 100rpx;
  padding: 0;
  top: 50rpx;
  line-height: 100rpx;
}
.left .userInfor{
  position: relative;
  height: 180rpx;
}
.userInfor{
  text-align: center;
}
.userInfor .nickName{
  position: relative;
  height: 100rpx;
  top: 10rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  font-weight: 600;
  padding-bottom: 20rpx;
}
.bottom{
  position: relative;
  margin-top: 50rpx;
  width: 90%;
  left: 5%;
}
.bottom .item{
  position: relative;
  background-color: lightblue;
  border-radius: 10rpx;
  height: 150rpx;
  width: 100%;
  text-align: center;
  line-height: 150rpx;
  margin:50rpx 0rpx;
  box-shadow: 5rpx 5rpx 15rpx rgb(123, 161, 156);
}
.item:active{
  box-shadow:5rpx 5rpx 5rpx rgb(123, 161, 156);
}
.item image{
  position: relative;
  float: left;
  left: 100rpx;
  top: 25rpx;
  height: 100rpx;
  width: 100rpx;
}
.item text{
  position: relative;
  left: -25rpx;
}
.question{
  position: relative;
  font-size: 28rpx;
  color: blue;
  opacity: 0.7;
  width: 20%;
  left: 40%;
  text-align: center;
}