/* pages/competition/details/details.wxss */
page{
  height: 100%;
  overflow-x: hidden;
}
.left{
  position: fixed;
  height: 100%;
  width: 40%;
  left: -40%;
  background-color: antiquewhite;
  z-index: 10;
}
.menus{
  position: relative;
  width: 100%;
}
.left .toApplycontent{
  position: absolute;
  bottom: 100rpx;
  left: 20%;
  width: 60%;
}
.showleft{
  position: fixed;
  z-index: 8;
  background-color: bisque;
  top: 100rpx;
  width: 50rpx;
  left: -10rpx;
  line-height: 50rpx;
  text-align: right;
  padding-right: 12rpx;
  height: 100rpx;
  border-radius: 10rpx;
  opacity: 0.5;
}
.right{
  position: fixed;
  height: 100%;
  width: 100%;
  z-index: 2;
}
.content{
  position: absolute;
  width: 100%;
  z-index: 1;
  background-color: rgba(255, 255, 255, 0.9);
}
.content .title{
  position: relative;
  height: 128rpx;
  line-height: 100rpx;
  padding-left: 10rpx;
  font-size: 48rpx;
  text-align: center;
  font-weight: 700;
}
.paragraph{
  position: relative;
  width: 100%;
}
.paragraph .paragraph_title{
  position: relative;
  width: 100%;
  height: 100rpx;
  font-size: 40rpx;
  line-height: 100rpx;
  text-align: center; 
  font-weight: 600;
}
.paragraphChild{
  padding-left: 20rpx;
  padding-right: 20rpx;
  font-size: 32rpx;
  position: relative;
  width: 96%;
}
.paragraphChild .paragraphChildTitle{
  position: relative;
  left: -5rpx;
  font-size: 36rpx;
  height: 120rpx;
  line-height:120rpx;
  border-bottom: 1px solid #000;
}
.space{
  position: relative;
  height: 200rpx;
  width: 100%;
}
.apply{
  position: relative;
  z-index: 8;
  bottom: 50rpx;
  width: 40%;
  left: 30%;
  height: 100rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.apply button{
  text-align: center;
  background-color: rgba(15, 226, 13, 1);
  position: relative;
  height: 100%;
  width: 100%;
  line-height: 100rpx;
  font-weight: 400;
  padding: 0;
}
