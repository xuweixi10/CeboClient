/* pages/competition/component/competitionInfo/comInfor.wxss */
.competitionItem{
  position: relative;
  background-color: rgba(209, 229, 231, 0.8);
  height: 120rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}

.competitionInformation{
  float: left;
  position: relative;
  width: 70%;
  /*border-bottom: 1px solid #000000;*/
  overflow: hidden;
  height: 100%;
}
.competitionInformation .name{
  position: relative;
  float: left;
  width: 100%;
  top: 5rpx;
  padding-left: 18rpx;
  font-weight: 500;
}
.competitionInformation .extra{
  position: relative;
  float: left;
  top: 5rpx;
  left: 40rpx;
  height: 40rpx;
  font-size: 24rpx;
  width: 100%;
}
.extra view{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.extra .time{
  width: 100%;
  float: left;
  position: relative;
  width: 300rpx;
}
.extra .object{
  width: 400rpx;
  float: left;
  position: relative;
}
.competitionItem .apply{
  position: relative;
  width: 150rpx;
  left: 20rpx;
  height: 120rpx;
  line-height: 120rpx;
  font-weight: 500;
  font-size: 36rpx;
  padding: 0;
  border-radius: 8rpx;
  opacity: 0.8;
}