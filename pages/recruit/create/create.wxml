<!--pages/recruit/create/create.wxml-->
<view class="main">
<form bindsubmit="formSubmit">
  <view class="title">
  发布你的招募
  </view>
  <view class="competitionName">
    <view class="name">比赛名称</view>
    <input class="value" name="competitionName" placeholder="输入你参加的比赛" maxlength="18"/>
  </view>
  <view class="wanted">
    <view class="name">需要的队友</view>
    <textarea class="value" name="wanted" placeholder="想要什么样的队友" maxlength="50"></textarea>
  </view>
  <view class="intro">
    <view class="name">介绍</view>
    <textarea class="value" name="intro" placeholder="介绍自己或项目，记得留下联系方式哦" maxlength="50"></textarea>
  </view>
  <button class="submit" formType="submit" type="primary">提交</button>
</form>
</view>

